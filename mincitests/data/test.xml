<?xml version="1.0" encoding="ISO-8859-1"?>
<testdefinition version="0.1">
  
  <!-- Test suite, name mandatory - the same as test package name -->
  <suite name="min-tests" domain="example-domain"> 
    <!-- At least one set per suite, name and description mandatory -->
    <set name="utils-tests" description="Test MIN utilites with min" feature="min-feature">   
      <case name="dllist" type="unit" description="unit tests for MIN dllist"  timeout="600" subfeature="" CI="true">
        <step expected_result="0">min -cx /usr/lib/min/dllist_tests.so</step>
      </case>

      <case name="logger" type="unit" description="unit tests for MIN logger"  timeout="600" subfeature="" CI="true">
        <step expected_result="0">min -cx /usr/lib/min/logger_tests.so</step>
      </case>

      <case name="minunit" type="unit" description="run MINUnit selftests"  timeout="600" subfeature="" CI="true">
        <step expected_result="8">min -cx /usr/lib/min/min_unit_selftest.so</step>
      </case>

      <case name="min_item_parser" type="unit" description="run unit test for MIN item parser" timeout="600" subfeature="" CI="true">
        <step expected_result="0">min -cx /usr/lib/min/item_parser_tests.so</step>
      </case>

      <case name="min_settings" type="unit" description="run unit test for MIN settings utility"  timeout="60" subfeature="" CI="true">
        <step expected_result="0">min -cx /usr/lib/min/settings_tests.so</step>
      </case>

 
      <!-- Environments optional - tells where the tests are run -->
      <environments>
        <scratchbox>false</scratchbox>
        <hardware>true</hardware>    
      </environments>

    </set>
  </suite>
</testdefinition>
