<?xml version="1.0" encoding="ISO-8859-1"?>
<testdefinition version="0.1">
  
  <!-- Test suite, name mandatory - the same as test package name -->
  <suite name="min-tests" domain="example-domain"> 
    <description>"Test MIN utilites with min"</description>
    <!-- At least one set per suite, name and description mandatory -->
    <set name="utils-tests"  feature="min-feature">   
      <case name="tests for MIN utils" type="Robustness" timeout="600" subfeature="" >
        <step expected_result="8">min -cx /usr/lib/min/dllist_tests.so -cx /usr/lib/min/logger_tests.so -cx /usr/lib/min/min_unit_selftest.so -cx /usr/lib/min/item_parser_tests.so -cx /usr/lib/min/settings_tests.so</step>
      </case>
      <case name="test scripter cli" type="Robustness" timeout="600" subfeature="" >
        <step expected_result="0">min_scripter_cli_test.sh | min -cx /usr/lib/min/scripter_cli.so</step>
      </case>
      <case name="test min qt db" type="Robustness" timeout="600" subfeature="" >
        <step expected_result="0">min -cx /usr/lib/min/scripter.so:/usr/lib/min//minqtdbtests.cfg</step>
      </case>
 
      <!-- Environments optional - tells where the tests are run -->
      <environments>
        <scratchbox>true</scratchbox>
        <hardware>true</hardware>    
      </environments>

    </set>
  </suite>
</testdefinition>
